<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.azyobuzi.saostar"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="net.azyobuzi.saostar.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.azyobuzi.saostar.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.azyobuzi.saostar.AccountsActivity"
            android:label="@string/title_activity_accounts"
            android:parentActivityName="net.azyobuzi.saostar.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.azyobuzi.saostar.MainActivity" />
        </activity>
        <activity
            android:name="net.azyobuzi.saostar.LoginActivity"
            android:label="@string/title_activity_login"
            android:launchMode="singleTask"
            android:parentActivityName="net.azyobuzi.saostar.AccountsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.azyobuzi.saostar.AccountsActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="net.azyobuzi.azyotter.saostar" android:host="callback"/>
            </intent-filter>
        </activity>
        <activity
            android:name="net.azyobuzi.saostar.AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName="net.azyobuzi.saostar.AccountsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.azyobuzi.saostar.AccountsActivity" />
        </activity>
    </application>

</manifest>