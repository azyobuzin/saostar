<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        
        <net.azyobuzi.azyotter.saostar.widget.CustomizedUrlImageView
		    android:id="@+id/iv_tweet_detail_profile_image"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:layout_marginRight="5dp"/>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	
	        <TextView
	            android:id="@+id/tv_tweet_detail_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/view_data"
	    		android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/tv_tweet_detail_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/view_data"/>
	        
	        <TextView
	            android:id="@+id/tv_tweet_detail_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	    		android:text="@string/view_data" />
	        
	    </LinearLayout>
	    
	</LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

    </ListView>

</LinearLayout>